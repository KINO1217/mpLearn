<!-- 事件绑定 -->
<block>
    <button type="primary" bindtap="onTap" data-info="{{count}}">{{count}}</button>
    <!-- 发送get请求 -->
    <button type="primary" bindtap="onPOST">发送POST请求</button>
    <button type="primary" bindtap="mOnenet">Onenet下发指令</button>
</block>