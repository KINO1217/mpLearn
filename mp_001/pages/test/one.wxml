        </view>
    </swiper-item>
    <swiper-item>
        <view class="item">
            <image src="https://tse3-mm.cn.bing.net/th/id/OIP-C.WVUDUw5Zvy9t3Q0LliB-0wHaKX?pid=ImgDet&rs=1"></image>
        </view>
    </swiper-item>
    <swiper-item>
        <view class="item">
            <image src="https://n.sinaimg.cn/sinakd10123/56/w690h966/20210418/8f90-knvsnuh3426644.jpg"></image>
        </view>
    </swiper-item>
